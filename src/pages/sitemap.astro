---
import MainLayout from '../layouts/MainLayout.astro';
import { toolCategories } from '../data/tools';
import ToolCard from '../components/ToolCard.astro';

const allTools = toolCategories.flatMap(category => category.tools).sort((a, b) => a.name.localeCompare(b.name));
---

<MainLayout 
	title="Sitemap | The Heuheu" 
	description="A complete list of all the tools available on The Heuheu."
>
	<div class="text-center mb-12">
		<h1 class="text-3xl font-bold text-slate-900 tracking-tight">All Tools</h1>
		<p class="text-slate-500 mt-2 text-lg max-w-2xl mx-auto">A complete list of all the tools available on The Heuheu, sorted alphabetically.</p>
	</div>
	<ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
		{allTools.map(tool => (
			<ToolCard 
				name={tool.name} 
				desc={tool.desc} 
				link={tool.link}
				icon={tool.icon}
			/>
		))}
	</ul>
</MainLayout>
