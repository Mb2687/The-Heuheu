---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Thank You!" description="Your message has been sent.">
    <div class="text-center py-16">
        <div class="relative inline-block">
            <img src="/heuheu-mascot_rm_bgd.png" alt="The Heuheu Mascot" class="h-64" />
            <div class="absolute inset-0 bg-indigo-600/20 rounded-full blur-2xl"></div>
        </div>
        <h1 class="text-3xl font-bold text-slate-900 tracking-tight mt-8">Thank You!</h1>
        <p class="text-slate-500 mt-2 text-lg">Your message has been sent successfully. We'll get back to you as soon as possible.</p>
        <a href="/" class="mt-8 inline-block bg-indigo-600 text-white px-6 py-3 rounded-lg font-bold hover:bg-indigo-700 transition-all">Back to Home</a>
    </div>
</MainLayout>
