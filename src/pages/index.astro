---
import Layout from '../layouts/Layout.astro';

const toolCategories = [
  {
    name: "Design & Media",
    tools: [
      { name: "WebP Alchemist", desc: "Lossless image optimization", link: "/tools/webp-converter" },
      { name: "Aspect Ratio", desc: "Proportional scaling calculator", link: "/tools/aspect-ratio-calculator" },
      { name: "SVG Placeholder", desc: "Lightweight mockup vectors", link: "/tools/svg-placeholder-maker" },
      { name: "Color Alchemist", desc: "HEX, RGB, and HSL conversion", link: "/tools/color-hex-alchemist" }
    ]
  },
  {
    name: "Development",
    tools: [
      { name: "JSON Alchemist", desc: "Validation and structural formatting", link: "/tools/json-formatter" },
      { name: "Base64 Alchemist", desc: "Binary-to-text transformation", link: "/tools/base64-alchemist" },
      { name: "Unix Timestamp", desc: "Epoch to human date conversion", link: "/tools/unix-timestamp-converter" },
      { name: "HTML Entities", desc: "Character escaping for web code", link: "/tools/html-entity-encoder" },
      { name: "QR Forge", desc: "Permanent, static QR generation", link: "/tools/qr-code-generator" }
    ]
  },
  {
    name: "Text & Data",
    tools: [
      { name: "Case Transformer", desc: "String casing and manipulation", link: "/tools/case-transformer" },
      { name: "List Scrubber", desc: "De-duplication and sorting", link: "/tools/list-scrubber" },
      { name: "Whitespace Scrubber", desc: "Hidden character removal", link: "/tools/whitespace-remover" },
      { name: "Lorem Ipsum", desc: "Placeholder text generation", link: "/tools/lorem-ipsum-generator" },
      { name: "Unit Alchemist", desc: "Universal measurement conversion", link: "/tools/unit-converter" },
      { name: "Password Forge", desc: "Client-side secure key generation", link: "/tools/password-forge" }
    ]
  }
];
---

<Layout 
	title="The Heuheu | Minimalist Utility Suite" 
	description="A private collection of 15+ browser-based tools for developers and designers. Fast, secure, and local."
>
	<main class="max-w-5xl mx-auto px-6 py-16 md:py-24">
		<header class="mb-20 border-b border-slate-100 pb-12">
			<h1 class="text-2xl font-semibold text-slate-900 tracking-tight">The Heuheu</h1>
			<p class="text-slate-500 mt-3 text-sm max-w-xl leading-relaxed">
				A private desk gremlinâ€™s collection of essential utilities. No tracking, no accounts, and no server-side processing. All data stays in your browser.
			</p>
		</header>

		<div class="grid grid-cols-1 md:grid-cols-2 gap-x-16 gap-y-20">
			{toolCategories.map(category => (
				<section>
					<h2 class="text-[10px] font-bold text-slate-400 uppercase tracking-[0.2em] mb-8 border-l-2 border-slate-200 pl-4">
						{category.name}
					</h2>
					<ul class="space-y-8">
						{category.tools.map(tool => (
							<li>
								<a href={tool.link} class="group block">
									<h3 class="text-sm font-medium text-slate-800 group-hover:text-black group-hover:underline underline-offset-4 decoration-slate-300 transition-all">
										{tool.name}
									</h3>
									<p class="text-slate-400 text-xs mt-1.5 leading-relaxed group-hover:text-slate-500 transition-colors">
										{tool.desc}
									</p>
								</a>
							</li>
						))}
					</ul>
				</section>
			))}
		</div>

		<footer class="mt-32 pt-12 border-t border-slate-50 text-slate-300">
			<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
				<div>
					<h4 class="text-[10px] font-bold uppercase tracking-widest mb-3">Privacy</h4>
					<p class="text-xs leading-relaxed">Zero data transmission. All logic is executed via client-side JavaScript.</p>
				</div>
				<div>
					<h4 class="text-[10px] font-bold uppercase tracking-widest mb-3">Speed</h4>
					<p class="text-xs leading-relaxed">Static architecture for near-instant load times across all global regions.</p>
				</div>
				<div>
					<h4 class="text-[10px] font-bold uppercase tracking-widest mb-3">Open</h4>
					<p class="text-xs leading-relaxed">A public utility for a cleaner, faster web experience.</p>
				</div>
			</div>
		</footer>
	</main>
</Layout>
